@model System.Collections.Generic.List<E_Commerce.Models.FormsData.AddOrDeleteRolesToAUserViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="AddOrDeleteRolesOfAUser" asp-controller="Roles" method="post">
    @{
        for (int i = 0; i < Model.Count; i++)
        {
            <div>
                  @{
                      if (Model[i].Checked)
                      {
                          <input type="checkbox" asp-for="@Model[i].Checked" checked="checked"/>
                      }
                      else
                      {
                          <input type="checkbox" asp-for="@Model[i].Checked"/>
                      }
                      <label asp-for="@Model[i].Name">@Model[i].Name</label>
                       <input type="hidden" asp-for="@Model[i].Name"/>                                             
                      <input type="hidden" asp-for="@Model[i].RoleId"/>
                  }
            </div>
        }
    }
    <input type="submit"/>
</form>