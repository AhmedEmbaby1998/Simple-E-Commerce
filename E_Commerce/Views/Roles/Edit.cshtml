@model E_Commerce.Models.FormsData.EditViewModel

@{
    Layout = "_Layout";
}
<form asp-action="Edit" asp-controller="Roles">
    <div class="role">
        <label asp-for="Id">Role Id</label>
        <input asp-for="Id" readonly="readonly" type="text"/>
    </div>
    <div class="role">
        <label asp-for="Name">Role Id</label>
        <input asp-for="Name" type="text"/>
    </div>
    <div class="sub">
        <input type="submit"/>
    </div>
    <div>The Users</div>
    <div>
        <table>
            <tr>
                <td>Id</td>
                <td>Name</td>
            </tr>
            @{
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                    </tr>
                }
            }

        </table>
    </div>
</form>