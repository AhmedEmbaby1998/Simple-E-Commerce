@using E_Commerce.Models.FormsData
@model AddOrDeleteClaimsForAUser

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="AddOrDeleteClaimsForAUser" asp-controller="Roles" method="post">
    <input type="hidden" asp-for="UserId"/>
    @{
        for (int i = 0; i < Model.Claims.Count; i++)
        {
            <div>
                <input type="checkbox" asp-for="@Model.Claims[i].Checked"/>
                <label asp-for="@Model.Claims[i].ClaimType">@Model.Claims[i].ClaimType</label>
                <input type="hidden" asp-for="Claims[i].ClaimType"/>
            </div>
        }
    }
    <input type="submit"/>
</form>
